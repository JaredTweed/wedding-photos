{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/form", "destination": "/form.html" },
      { "source": "/home", "destination": "/home.html" },
      { "source": "/:slug", "destination": "/home.html" }
    ],
    "errorPage": "404.html"
  },
  "firestore": {
    "database": "(default)",
    "location": "us-west2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
