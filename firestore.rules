rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    match /sites/{slug} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.slug == slug
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.keys().hasOnly([
          'title', 'slug', 'primaryColor', 'region', 'idPool', 'bucket', 'icoImage', 'createdBy', 'createdAt', 'plan', 'objectPrefix', 'fontFamily'
        ])
        && (!('plan' in request.resource.data) || request.resource.data.plan in ['managed', 'self-managed'])
        && (!('objectPrefix' in request.resource.data) || request.resource.data.objectPrefix is string)
        && (!('fontFamily' in request.resource.data) || request.resource.data.fontFamily is string);

      allow update: if isSignedIn()
        && resource.data.createdBy == request.auth.uid
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.slug == resource.data.slug
        && request.resource.data.keys().hasOnly([
          'title', 'slug', 'primaryColor', 'region', 'idPool', 'bucket', 'icoImage', 'createdBy', 'createdAt', 'plan', 'objectPrefix', 'fontFamily'
        ])
        && (!('plan' in request.resource.data) || request.resource.data.plan in ['managed', 'self-managed'])
        && (!('objectPrefix' in request.resource.data) || request.resource.data.objectPrefix is string)
        && (!('fontFamily' in request.resource.data) || request.resource.data.fontFamily is string);

      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }
  }
}
