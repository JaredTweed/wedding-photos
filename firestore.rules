rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    match /sites/{slug} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.slug == slug
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.keys().hasOnly([
          'title', 'slug', 'primaryColor', 'region', 'idPool', 'bucket', 'icoImage', 'createdBy', 'createdAt'
        ]);

      allow update: if isSignedIn()
        && resource.data.createdBy == request.auth.uid
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.slug == resource.data.slug;

      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }
  }
}
